package sensorpackage;

import basic.Point;
import mappackage.RealMap;
import repositorypackage.Repository;
import spotpackage.Spot;

public class HazardSensor extends Sensor{
	Repository repo;
	PositionSensor ps;
	RealMap rm;
	
	public HazardSensor(Repository repo, RealMap rm) {
		this.repo = repo;
		this.rm = rm;
	}
	
	@Override
	public Point location() {
		Point current = ps.location();
		Point next = repo.p.getPath(current);
		return next;
	}

	@Override
	public boolean checksensor() {
		boolean result = false;
		Point p = location();
		rm.board[p.getx()][p.gety()].getCharacter() == 'H'; 
	
		return result;
	}

}
