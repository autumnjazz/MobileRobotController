package mappackage;
import java.util.ArrayList;

import spotpackage.*;

public class Map {
	public Spot board[][];
	public int col; public int row;
	
	public ArrayList<Hazard> hlist = new ArrayList();
	public ColorBlob clist[];
	public Predefined plist[];
	
	//board
	public void initBoard(int row, int col) {
		this.row = row; this.col = col;
		board = new Spot[row][col];
		for (int i = 0; i < row; i++) {
			for (int j = 0; j< col; j++) {
				Spot s = new Spot();
				board[i][j] = s;
			}
		}
	}
	public void printBoard() {
		for (int i = 0; i < row; i++) {
			for (int j = 0; j< col; j++) {
				System.out.print(board[i][j].getCharacter());
			}
			System.out.println();
		}
	}
	
	//hazard
	public void setHazard(int x, int y) {
		Hazard h = new Hazard(x,y);
		hlist.
	}
}
