package mappackage;
import java.util.ArrayList;

import spotpackage.*;

public class Map {
	private Spot board[][];
	private int col; private int row;
	
	public ArrayList<Hazard> hlist = new ArrayList();
	public ArrayList<ColorBlob> clist = new ArrayList();
	public ArrayList<Predefined> plist = new ArrayList();
	
	//board
	public void initBoard(int row, int col) {
		this.row = row; this.col = col;
		board = new Spot[row][col];
		for (int i = 0; i < row; i++) {
			for (int j = 0; j< col; j++) {
				Spot s = new Spot();
				board[i][j] = s;
			}
		}
	}
	public void printBoard() {
		for (int i = 0; i < row; i++) {
			for (int j = 0; j< col; j++) {
				System.out.print(board[i][j].getCharacter());
			}
			System.out.println();
		}
	}
	public void updateBoard(int x, int y, Spot s) {
		board[x][y] = s;
	}
	
	//hazard
	public void setHazard(int x, int y) {
		Hazard h = new Hazard(x,y);
		hlist.add(h);
		board[x][y] = h;
	}
	public void printHazard() {
		for(Hazard obj:hlist) {
			System.out.println(obj.getPosition());
		}
	}
	
	
	
}
