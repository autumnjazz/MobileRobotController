package sensorpackage;

import basic.Point;
import mappackage.RealMap;
import repositorypackage.Repository;

public class ColorBlobSensor extends Sensor{
	Repository repo;
	PositionSensor ps;
	RealMap rm;

	public ColorBlobSensor(Repository repo, RealMap rm) {
		this.repo = repo;
		this.rm = rm;
	}
	
	public Point location(int idx) {
		Point current = ps.location();
		switch(idx) {
		case 1: //up
			current.changePoint(1, 0);
			break;
		case 2: //down
			current.changePoint(-1, 0);
			break;
		case 3: //left
			current.changePoint(0, -1);
			break;
		case 4: //right
			current.changePoint(0, 1);
			break;
		default:
			break;
		}
		
		return current;
	}

	public boolean[] checksensor(Point p) {
		boolean[] result = {false, false, false, false};
		
		return result;
	}

}
